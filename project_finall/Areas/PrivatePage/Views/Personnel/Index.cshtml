@using project_finall.Models.Database   
@{
       ViewBag.Title = "Index";
    Layout = "~/Areas/PrivatePage/Views/Shared/_Layout.cshtml";
    var user = (project_finall.Models.Database.Account)System.Web.HttpContext.Current.Session["user"];
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Contacts Design</h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12">
                <div class="x_panel">
                    <div class="x_content">
                        <div class="row">

                            <div class="clearfix"></div>

                            @{
                                foreach (Account account in project_finall.Models.Commoncs.GetAccounts())
                                {
                                    <div class="col-md-4 col-sm-4 col-xs-12 profile_details">
                                        <div class="well profile_view">
                                            <div class="col-sm-12">
                                                <h4 class="brief"><i>Admin</i></h4>
                                                <div class="left col-xs-7">
                                                    <h2>@account.Username</h2>
                                                    <h4>@account.Surname @account.Middle_Name @account.Name</h4>
                                                    <p><strong>About: </strong> Web Designer / UX / Graphic Artist / Coffee Lover </p>
                                                    <ul class="list-unstyled">
                                                        <li><i class="fa fa-building"></i> @account.Email </li>
                                                        <li><i class="fa fa-phone"></i>(+84) @account.P_Number</li>
                                                    </ul>
                                                </div>
                                                <div class="right col-xs-5 text-center">
                                                    @*<a href=" @Url.Action("ChangeImg","Personnel", new {User=account.Username})">
                                                        <img src="@account.img" alt="" class="img-circle img-responsive">
                                                    </a>*@
                                                    <img src="@account.img" alt="" class="img-circle img-responsive">
                                                </div>
                                            </div>
                                            <div class="col-xs-12 bottom text-center">
                                                <div class="col-xs-12 col-sm-6 emphasis">
                                                    <p class="ratings">
                                                        <a>4.0</a>
                                                        <a href="#"><span class="fa fa-star"></span></a>
                                                        <a href="#"><span class="fa fa-star"></span></a>
                                                        <a href="#"><span class="fa fa-star"></span></a>
                                                        <a href="#"><span class="fa fa-star"></span></a>
                                                        <a href="#"><span class="fa fa-star-o"></span></a>
                                                    </p>
                                                </div>
                                                <div class="col-xs-12 col-sm-6 emphasis">
                                                    <a href="" type="button" class="btn btn-success btn-xs">
                                                        <i class="fa fa-user">
                                                        </i> <i class="fa fa-comments-o"></i>
                                                    </a>
                                                    <a href="@Url.Action("Profile","Personnel")" type="button" class="btn btn-primary btn-xs"><i class="fa fa-user"></i> View Profile</a>
                                                    <a href="@Url.Action("Edit", "Personnel", new {/**/})" type="button" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Edit </a>
                                                    <a href="@Url.Action("Delete", "Personnel", new {/**/})" type="button" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }

                            }



                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

