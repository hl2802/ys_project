
@{
    Layout = null;
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>project_finall | </title>

    <!-- Bootstrap -->
    <link href="~/Areas/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="~/Areas/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="~/Areas/vendors/nprogress/nprogress.css" rel="stylesheet">
    <!-- Animate.css -->
    <link href="~/Areas/vendors/animate.css/animate.min.css" rel="stylesheet">

    <!-- Custom Theme Style -->
    <link href="~/Areas/build/css/custom.min.css" rel="stylesheet">
</head>

<body class="login">
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>

        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <h1>Login Form</h1>
                        <div>

                            @Html.TextBox("Acc","", new { @class = "form-control", @placeholder = "Username", @required = "", @autocomplete = "off" })
                        </div>
                        <div>
                            @Html.Password("Pass","",new { @class = "form-control", @placeholder = "Password", @required = "" })

                        </div>
                        <div>
                            <button type="submit" class="btn btn-default submit">Log in</button>
                        
                        </div>
                        <div>
                            @ViewBag.Notification
                        </div>

                        <div class="clearfix"></div>

                        <div class="separator">
                       

                            <div class="clearfix"></div>
                            <br />

                            <div>
                                <h1><i class="fa fa-paw"></i> project_finall</h1>
                            </div>
                        </div>
                    }
                </section>
            </div>

           
        </div>
    </div>
</body>
</html>
