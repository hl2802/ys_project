
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_layout2.cshtml";
}

@using project_finall.Models
@{

}

<!-- Start gallery Area -->
<section class="service-area section-gap" id="service">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 pb-50 header-text text-center">
                <h1 class="pb-10">Simple. Modern. Residential Architecture.</h1>

            </div>
        </div>
        <div class="row">
            @{
                foreach (project_finall.Models.Database.Type_Product tp in Commoncs.GetType_Products().Take(1))
                {

                    foreach (project_finall.Models.Database.Product p in Commoncs.getProductByType_Product(tp.Id_Type_Product = 1).Take(1))

                    {
                        <div class="col-lg-6">
                            <div class="single-service" style=" background-color: #ffff; border-color: #afafaf2e;">

                                <img src="~/img/demo/pt1.jpg" class="content-image img-fluid d-block mx-auto" style=" border-radius:10px 10px" />
                                <a href="@Url.Action("Type_Projects", "Projects",  new {Id_Type_Product=p.Id_Type_Product})">
                                    <h4>Thiết Kế Nội Thất </h4>
                                </a>
                                <p>
                                    @p.Summary_Content
                                </p>
                            </div>
                        </div>

                    }
                    foreach (project_finall.Models.Database.Product p in Commoncs.getProductByType_Product(tp.Id_Type_Product = 2).Take(1))

                    {
                        <div class="col-lg-6">
                            <div class="single-service" style=" background-color: #ffff; border-color: #afafaf2e;">

                                <img src="~/img/demo/pt1.jpg" class="content-image img-fluid d-block mx-auto" style=" border-radius:10px 10px" />
                                <a href="@Url.Action("Type_Projects", "Projects",  new {Id_Type_Product=p.Id_Type_Product})">
                                    <h4>Kiến Trúc Công trình</h4>
                                </a>
                                <p>
                                  @Html.Raw(p.Summary_Content)
                                </p>
                            </div>
                        </div>

                    }
                }

            }

        </div>
    </div>
</section>

<!-- Start callto-action Area -->
<section class="callto-action-area pt-120">
    <div class="container">
        <div class="row justify-content-center">
            <div class="callto-action-wrap col-lg-12 relative section-gap">
                <div class="content">
                    <h1>
                        Tìm kiếm một<br />
                        thiết kế nội thất chất lượng và giá cả phải chăng?
                    </h1>
                    <p class="mx-auto">
                        <!-- inappropriate behavior is often laughed off as “boys will be boys,” women face higher conduct standards especially in the workplace. -->
                    </p>
                    <a href="#" class="primary-btn text-uppercase"> QUAY LẠI NGAY</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End callto-action Area -->
<!-- Start blog Area -->
<section class="blog-area section-gap">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="menu-content pb-60 col-lg-9">
                <div class="title text-center">
                    <h1 class="mb-10">Bài viết tiêu biểu</h1>
                    <!-- <p>Who are in extremely love with eco friendly system.</p> -->
                </div>
            </div>
        </div>
        <div class="row">
            <div class="active-blog-carusel">
                @{
                    foreach (project_finall.Models.Database.Article article in Commoncs.GetArticles(5))
                    {
                        <div class="single-blog-post item">
                            <div class="thumb">
                                <img class="img-fluid" src="@article.Img" alt="">
                            </div>
                            <div class="details">
                                <div class="tags">
                                    <ul>
                                        <li>
                                            <a href="#">Life Style</a>
                                        </li>
                                    </ul>
                                </div>
                                <a href="@Url.Action("Articles", "BlogSingle", new {Id_Articles=article.Id_Articles})">
                                    <h4 class="title">@article.Name_Articles</h4>
                                </a>
                                <p>
                                    @article.Summary_Content
                                </p>
                                <h6 class="date">
                                    <span>
                                        @string.Format("0: MMM dd yyyy", article.Date_Submitted)in
                                        <a href="#">@(article.Type_Articles.Equals("QC")? "advertisement": "news")</a>
                                    </span>
                                </h6>
                            </div>
                        </div>
                    }
                }


            </div>
        </div>
    </div>
</section>
<!-- End blog Area -->
